<p id="notice"><%= notice %></p>
<script src="//maps.google.com/maps/api/js?key=AIzaSyA4BHW3txEdqfxzdTlPwaHsYRSZbfeIcd8"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
		
<h1>Monuments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Address</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monuments.each do |monument| %>
      <tr>
        <td><%= monument.name %></td>
        <td><%= monument.description %></td>
        <td><%= image_tag monument.image.url(:medium) %></td>
        <td><%= monument.longitude %></td>
        <td><%= monument.latitude %></td>
        <td><%= monument.address %></td>
        <td><%= monument.category.name %></td>
        <td><%= link_to 'Show', monument %></td>
        
        
        <% if user_signed_in?%>
        <td><%= link_to 'Edit', edit_monument_path(monument) %></td>
        <td><%= link_to 'Destroy', monument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<div style='width: 800px;'>
  <div id="map_show" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">  
      handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map_show'}}, function(){
 markers = handler.addMarkers(<%=raw @hash.to_json %>);
  
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
		</script>

<br>

<% if user_signed_in?%>
<%= link_to 'New Monument', new_monument_path %>
<%end%>
