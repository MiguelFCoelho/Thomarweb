<p id="notice"><%= notice %></p>

<h1>Pois</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Monumento a que pertence:</th>
      <th>Beacon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pois.each do |poi| %>
      <tr>
        <td><%= poi.name %></td>
        <td><%= poi.description %></td>
        <td><%= poi.image %></td>
        <td><%= poi.longitude %></td>
        <td><%= poi.latitude %></td>
        <td><%= poi.monument.name %></td>
        <td><%= poi.beacon.uuid %></td>
        <td><%= link_to 'Show', poi %></td>

        <% if user_signed_in?%>
        <td><%= link_to 'Edit', edit_poi_path(poi) %></td>
        <td><%= link_to 'Destroy', poi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in?%>
<%= link_to 'New Poi', new_poi_path %>
<%end%>

