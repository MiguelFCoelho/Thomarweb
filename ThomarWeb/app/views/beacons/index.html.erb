<p id="notice"><%= notice %></p>

<h1>Beacons</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Manufacturer</th>
      <th>Battery</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.uuid %></td>
        <td><%= beacon.manufacturer %></td>
        <td><%= beacon.battery %></td>
        <td><%= beacon.longitude %></td>
        <td><%= beacon.latitude %></td>
        <td><%= beacon.image %></td>
        <td><%= beacon.description %></td>
        <td><%= link_to 'Show', beacon %></td>
        <td><%= link_to 'Edit', edit_beacon_path(beacon) %></td>
        <td><%= link_to 'Destroy', beacon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beacon', new_beacon_path %>
